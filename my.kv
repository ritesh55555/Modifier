<home>:

    orientation : 'vertical'
    padding : 20
    Label:
        text : 'OCF Resource Tool'
        font_size : 30
        spacing : [20,20]
    
    Label:
        text : 'Select the OCF device type'
        font_size : 20
        size_hint_x : .4
    
    BoxLayout :
        orientation : 'horizontal'
        size_hint_x : .5
        spacing : -200
        CheckBox : 
