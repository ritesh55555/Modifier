<customizePage>:
    orientation : "vertical"
    padding : 30 
    spacing : 10
    BoxLayout:
        orientation  :"horizontal"
        size_hint_y  : .1
        Label:
            text : "OCF Resource Tool"
            font_size : 30

    BoxLayout:
        orientation  :"horizontal"
        size_hint_y  : .1
        Label:
            text : "Customize Selected Resource type for " + root.deviceid
            font_size : 20

    ScrollView:
        BoxLayout:
            orientation:"vertical"
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    orientation:"horizontal"

        BoxLayout:
            orientation:"vertical"
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    orientation:"horizontal" 
    
    FloatLayout:
        size_hint_y : .1
        Button:
            text: 'Next'
            size_hint : (.1,.8)
            pos_hint : {'x':.45 , 'y' : -.1}
            


 